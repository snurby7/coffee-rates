{
    "name": "coffee-rates",
    "version": "0.0.1",
    "description": "Yarn Workspace root for Coffee Rates",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:react": "concurrently --kill-others-on-fail \"yarn start:overnightServer\" \"yarn start:react-client\"",
        "start:overnightServer": "cd packages/overnight-server && yarn start",
        "start:react-client": "cd packages/react-client && yarn start",
        "test": "yarn workspaces run test"
    },
    "dependencies": {
        "concurrently": "^4.1.0",
        "nodemon": "^1.18.9"
    }
}