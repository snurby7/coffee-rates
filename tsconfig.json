{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "baseUrl": "./",
        "sourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es5",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "./packages/overnight-server/CoffeeRatesServer.ts",
        "./packages/overnight-server/controllers/**/*",
        "./packages/cr-common/**/*"
    ],
    "exclude": [
        "**/node_modules/",
        "./src/public/"
    ]
}